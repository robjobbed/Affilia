# Server
PORT=3000
NODE_ENV=development

# X (Twitter) OAuth - Get from https://developer.twitter.com/
X_CLIENT_ID=your_x_client_id_here
X_CLIENT_SECRET=your_x_client_secret_here

# JWT Secret - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate_a_random_secret_here

# Database - PostgreSQL connection string
DATABASE_URL=postgresql://postgres:password@localhost:5432/solomine

# Encryption Key for OAuth tokens - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=generate_a_random_encryption_key_here

# CORS - Allowed origins
ALLOWED_ORIGINS=http://localhost:3000,https://solomine.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
